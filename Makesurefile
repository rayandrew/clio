############################################################
#                       LIBRARIES
############################################################

@lib
  assert() {
    if [[ "$1" = "false" ]] || [[ "$1" = "0" ]]; then
      echo "Assertion failed: $2"
      exit 1
    fi
  }


  is_bool() {
    if [[ "$1" != "true" ]] && [[ "$1" != "false" ]] && [[ "$1" != "1" ]] && [[ "$1" != "0" ]]; then
      echo "false"
    else
      echo "true"
    fi
  }

  is_not_bool() {
    bool=$(is_bool $1)
    if [[ "$bool" = "true" ]]; then
      echo "false"
    else
      echo "true"
    fi
  }

  is_empty() {
    if [[ -z "$1" ]]; then
      echo 1
    elif [[ "$1" = "" ]]; then
      echo 1
    else
      echo 0
    fi
  }

  is_not_empty() {
    empty=$(is_empty $1)
    if [[ "$empty" = "1" ]]; then
      echo 0
    else
      echo 1
    fi
  }
  
  normalize_bool() {
    if [[ "$1" = "true" ]] || [[ "$1" = "1" ]]; then
      echo "true"
    else
      echo "false"
    fi
  }

